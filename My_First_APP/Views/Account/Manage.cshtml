@using My_First_APP.Models;
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Управление учетной записью";
}

<h2>@ViewBag.Title.</h2>
<h1 class="text-success">@ViewBag.StatusMessage</h1>

<p>Вы вошли как <strong>@User.Identity.GetUserName()</strong>.</p>
@Html.ValidationSummary()
@using (Html.BeginForm("ManagePerson", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="@ViewBag.PersonEdit" class="btn btn-warning" />
        </div>
    </div>
}

<div class="row">
    <div class="col-md-12">
        @Html.Partial("_ChangePasswordPartial")
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        @Html.Partial("_ChangeMailPartial")
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
