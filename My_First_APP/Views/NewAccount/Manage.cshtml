@using My_First_APP.Models;
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Управление учетной записью";
}

<h2>@ViewBag.Title.</h2>
<h1><p class="text-success">@ViewBag.StatusMessage</p></h1>
 
<p>Вы вошли как <strong>@User.Identity.GetUserName()</strong>.</p>
@Html.ValidationSummary()

<div class="row">
    <div class="col-md-12">              
            @Html.Partial("_ChangePasswordPartial")                 
    </div> 
</div>

<div class="row">
    <div class="col-md-12">        
        @Html.Partial("_ChangeMailPartial")
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
